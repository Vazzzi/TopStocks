@model  TopStocks.Models.IndexViewModel
@{
    ViewBag.Title = "Get Your Stocks Here";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div align="right">
    <h3>
        @if (User.IsInRole("Admin"))
        {
            <a href='/Stocks/Manage' class='button'>Manage</a>
        }
    </h3>
</div>
<div align="left">
    <a onclick="javascript:getAllStocksJSON();" class='button'>Refresh Market Data</a>
</div>
<br />
<br />

<div class="stock-main-view">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-9" id="show-stocks">
            <div class="row" id="stock-grid">
            </div>
        </div>
    </div>
</div>


@Html.Partial("_HoldingModal")

